<div id="Componentes">
    <div id="main">
        {{> navbar}}
        <div class="contentNewcourses">
            <a class="CourseTitle">Administrar Profesores</a>
            <div class="row">
                <div class="col-md-12 mx-auto">
                    <div class="card text-center">
                        {{> messages}}
                        <div class="card-header">
                            <h3>Profesores</h3>
                        </div>
                        <div class="card-body">
                            <div class="row  justify-content-start">

                                <div class="col-sm">
                                    Busqueda
                                    <input type="text" style="width: 70%;" id="searchUser"
                                        placeholder="# Asociado / Nombre / Curso / Status">
                                </div>
                                <div class="col-md">
                                    <button type='button' data-toggle='modal' data-target='#newUser'
                                        class="btn btn-success float-right">Alta Profesor</button>

                                    <a class="btn btn-primary float-right"
                                        href="/administrador/menu_docentes">Regresar</a>


                                    <!-- cuadro del modal -->
                                    <div class="modal fade" id="newUser" tabindex="-1" role="dialog">
                                        <div class="modal-dialog modal-lg" role="document">
                                            <form action="/administrador/busquedaProfesores" method="post">
                                                <div class="modal-content">
                                                    <div class="modal-header d-block">
                                                        <h5 class="modal-title text-center">
                                                            Nuevo Profesor
                                                        </h5>
                                                    </div>
                                                    <div class="modal-body text-center" style="display: flex;">
<form>
                                                        <div class="form-group" id="allUser">
                                                            <button class="btn btn-primary" href="/administrador/ttte"
                                                                for="inputName">Busqueda</button>
                                                            <input type="text" style="width: 100%;" name="search"
                                                                placeholder="# Asociado / Nombre">

                                                            <div class="input-group" id="infoTeacher"
                                                                style="display: block;">

                                                                <table class="table  table-striped  table-hover"
                                                                    id="">
                                                                    <thead>
                                                                        <tr>
                                                                            <th style="width:10%; background-color: #5DACCD; color:#fff"
                                                                                scope="col"># Asociado</th>
                                                                            <th style="background-color: #5DACCD; color:#fff"
                                                                                scope="col">Nombre</th>
                                                                        </tr>
                                                                    </thead>
                                                                    <tbody id="">
                                                                        <tr>
                                                                            <th scope="row">dddd</th>
                                                                            <th scope="row">dddd</th>
                                                                        </tr>
                                                                    </tbody>


                                                                </table>

                                                            </div>



                                                        </div>
                                                        </form>


                                                        <div class="form-group">
                                                            <button class="btn btn-primary"
                                                                for="inputName">Busqueda</button>
                                                            <input type="text" style="width: 100%;" href="admin/ttte" name="search"
                                                                placeholder="# Asociado / Nombre">

                                                            <div class="input-group" id="infoTeacher"
                                                                style="display: block;">

                                                                <label for="nameSearch">Nombre</label>
                                                                <div class="input-group">
                                                                    <input type="text" id="nameSearch" value="sadasd"
                                                                        style="width: 100%;"></input>
                                                                </div>

                                                                <label for="idSearch"># Asociado</label>
                                                                <div class="input-group">
                                                                    <input type="text" id="nameSearch" value="sadasd"
                                                                        style="width: 100%;"></input>
                                                                </div>

                                                                <label for="statusSearch">Status</label>
                                                                <div class="input-group">
                                                                    <input type="text" id="nameSearch" value="sadasd"
                                                                        style="width: 100%;"></input>
                                                                </div>

                                                            </div>

                                                        </div>






                                                    </div>

                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary"
                                                            data-dismiss="modal">Cancelar</button>
                                                        <button type="submit" class="btn btn-primary">Aceptar</button>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>





                                </div>

                            </div>
                        </div>
                        <table class="table  table-striped  table-hover" id="tabla">
                            <thead>
                                <tr>
                                    <th style="width:10%; background-color: #5DACCD; color:#fff" scope="col"># Asociado
                                    </th>
                                    <th style="background-color: #5DACCD; color:#fff" scope="col">Nombre</th>
                                    <th style="background-color: #5DACCD; color:#fff" scope="col">Curso</th>
                                    <th style="background-color: #5DACCD; color:#fff" scope="col">Status</th>
                                    <th style="background-color: #5DACCD; color:#fff" scope="col">Ultima conexion</th>
                                    <th style="background-color: #5DACCD; color:#fff" scope="col">Acciones</th>
                                </tr>
                            </thead>
                            <tbody id="allUsers">
                                {{#each teacher}}
                                <tr>
                                    <th scope="row">{{usercve}}</th>
                                    <td>{{fullname}}</td>
                                    <td>Ingles</td>
                                    {{#ifCond status '==' 'activo'}}
                                    <td style="color: green;">{{status}}</td>
                                    {{/ifCond}}
                                    {{#ifCond status '==' 'inactivo'}}
                                    <td style="color: red;">{{status}}</td>
                                    {{/ifCond}}
                                    <td>{{timeago lastconec}}</td>
                                    <td>
                                        <button type="button" class="btn"
                                            style="background-color:#1b9e1d;border: 0px !important;color:white;"
                                            title="Detalles de usuario">
                                            <i class="far fa-eye" aria-hidden="true"></i>
                                        </button>

                                        <button type="button" class="btn" data-toggle='modal' data-target='#{{id}}'
                                            style="background-color:#5172F3;border: 0px !important;color:white;"
                                            title="Editar">
                                            <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                                        </button>
                                        <button type="button" class="btn"
                                            style="background-color:#EDC30F;border: 0px !important;color:white;"
                                            title="Añadir Curso">
                                            <i class="fas fa-glasses" aria-hidden="true"></i>
                                        </button>

                                        <!-- cuadro del modal -->
                                        <div class="modal fade" id={{id}} tabindex="-1" role="dialog">
                                            <div class="modal-dialog" role="document">
                                                <form action="/administrador/editUser/{{id}}" method="post">
                                                    <div class="modal-content">
                                                        <div class="modal-header d-block">
                                                            <h5 class="modal-title text-center">
                                                                Editar Usuario
                                                            </h5>
                                                        </div>
                                                        <div class="modal-body" style="text-align: start;">
                                                            <div class="form-group">
                                                                <label for="inputName">Nombre</label>
                                                                <div class="input-group">
                                                                    <textarea name="fullname" cols="64" id="inputName"
                                                                        rows="1"
                                                                        class="form-control">{{fullname}}</textarea>
                                                                </div>
                                                            </div>

                                                            <div class="form-group">
                                                                <label for="inputEmail">Correo Electronido</label>
                                                                <div class="input-group">
                                                                    <input type="email" name="email" id="inputEmail"
                                                                        value={{email}} class="form-control"
                                                                        placeholder="Ejemplo@ejemplo.com" />
                                                                </div>

                                                            </div>

                                                            <div class="form-group">
                                                                <label for="inputDate">Fecha de nacimientos</label>
                                                                <input class="form-control" name="birthday" type="date"
                                                                    data-date-format="DD MMMM YYYY" value={{birthday}}
                                                                    id="inputDate">
                                                            </div>

                                                            <div class="form-group">
                                                                <label for="inputNumber">Status</label>
                                                                <div class="input-group">
                                                                    <select name="status" class="form-control">
                                                                        <option value="activo">activo</option>
                                                                        <option value="inactivo">inactivo</option>
                                                                    </select>
                                                                </div>
                                                                <small class="form-text text-muted">El status puede
                                                                    volver a activerse o desactivarse</small>
                                                            </div>

                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary"
                                                                data-dismiss="modal">Cancelar</button>
                                                            <button type="submit" class="btn btn-primary">Guardar
                                                                Cambios</button>
                                                        </div>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>


                                    </td>
                                </tr>
                                {{else}}
                                <h4>NO SE ENCUENTRA NINGUN USUARIO REGISTRADO</h4>
                                {{/each}}

                            </tbody>

                        </table>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>