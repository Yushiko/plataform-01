<div class="row" id="allCategorys">
    <div class="col-md-12 mx-auto">
        <div class="card text-center">
            {{> messages}}
            <div class="card-header">
                <h3>Categorias</h3>
            </div>
            <div class="card-body">
                <div class="row  justify-content-start">

                    <div class="col-sm">
                        Busqueda
                        <input type="text" style="width: 70%;" id="searchCategory">
                    </div>
                    <div class="col-md">
                        <button type='button' data-toggle='modal' data-target='#newCategory'
                            class="btn btn-success float-right" style="position: absolute; top: 20%; left: 70%">Nueva Categoria</button>

                        <!-- cuadro del modal AGREGAR-->
                        <div class="modal fade" id="newCategory" tabindex="-1" role="dialog">
                            <div class="modal-dialog" role="document">
                                <form id="nueva_categoria">
                                    <div class="modal-content">
                                        <div class="modal-header d-block" style="background-color: #00447f; color: white">
                                            <h5 class="modal-title text-center">
                                                Nueva Categoria
                                            </h5>
                                        </div>
                                        <div class="modal-body" style="text-align: start;">

                                            <div class="form-group">
                                                <label for="inputCVE">Clave</label>
                                                <div class="input-group">
                                                    <input type="text" name="catecve" id="inputCVE"
                                                        class="form-control" />
                                                </div>
                                                <small class="form-text text-muted">Ejemplo: INGL para Ingles</small>
                                            </div>

                                            <div class="form-group">
                                                <label for="inputDESC">Descripcion</label>
                                                <div class="input-group">
                                                    <input type="text" name="catedesc" id="inputDESC"
                                                        class="form-control" />
                                                </div>
                                                <small class="form-text text-muted">Ejemplo: Ingles</small>
                                            </div>


                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary"
                                                data-dismiss="modal">Cancelar</button>
                                            <button  class="btn btn-primary nuevaCategoriadoBoton">Aceptar</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>





                    </div>

                </div>
            </div>
            <table class="table  table-striped  table-hover" id="tableCategorys">
                <thead>
                    <tr>
                        <th style="width:10%; background-color: #5DACCD; color:#fff" scope="col">Clave</th>
                        <th style="background-color: #5DACCD; color:#fff" scope="col">Descripcion</th>
                        <th style="background-color: #5DACCD; color:#fff" scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody id="allCategory">
                    {{#each allcategory}}
                    <tr>
                        <th scope="row">{{catecve}}</th>
                        <td>{{catedesc}}</td>
                        <td>

                            <button type="button" class="btn" data-toggle='modal' data-target='#Upda{{catecve}}'
                                style="background-color:#5172F3;border: 0px !important;color:white;" title="Editar">
                                <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                            </button>
                            <button type="button" class="btn pruebabut" data-value={{id}}
                                style="background-color:rgb(0, 243, 73);border: 0px !important;color:white;"
                                title="Subcategorias">
                                <i class="fa fa-angle-right" aria-hidden="true"></i>
                            </button>
                            <button type="button" class="btn" data-toggle='modal' data-target='#Del{{catecve}}'
                                style="background-color: red;border: 0px !important;color:white;" title="Eliminar">
                                <i class="fas fa-trash-alt" aria-hidden="true"></i>
                            </button>



                            <!-- cuadro del modal EDITAR -->
                            <div class="modal fade" id="Upda{{catecve}}" tabindex="-1" role="dialog">
                                <div class="modal-dialog" role="document">
                                    <form class="modificar_categoria" >
                                        <div class="modal-content">
                                            <div class="modal-header d-block" style="background-color: #00447f; color: white">
                                                <h5 class="modal-title text-center">
                                                    Editar Categoria
                                                </h5>
                                            </div>
                                            <div class="modal-body" style="text-align: start;">

                                                <div class="form-group">
                                                    <label for="inputCVE">Clave</label>
                                                    <div class="input-group">
                                                        <input type="text" name="catecve" id="inputCVE"
                                                            value={{catecve}} class="form-control" />
                                                    </div>

                                                </div>

                                                <div class="form-group">
                                                    <label for="inputDESC">Descripcion</label>
                                                    <div class="input-group">
                                                        <input type="text" name="catedesc" id="inputDESC"
                                                            value={{catedesc}} class="form-control" />
                                                    </div>

                                                </div>


                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary"
                                                    data-dismiss="modal">Cancelar</button>
                                                <button class="btn btn-primary modificarCategoryBoton" value="{{catecve}}">Guardar
                                                    Cambios</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>

                            <!-- cuadro del modal ELIMINAR -->
                            <div class="modal fade" id="Del{{catecve}}" tabindex="-1" role="dialog">
                                <div class="modal-dialog" role="document">
                                    <form class="eliminar_categoria" >
                                        <div class="modal-content">
                                            <div class="modal-header d-block" style="background-color: #00447f; color: white">
                                                <h5 class="modal-title text-center">
                                                    ELIMINAR {{catedesc}}
                                                </h5>
                                            </div>
                                            <div class="modal-body" style="text-align: start;">
                                                <h5>ESTA SEGURO QUE DESEA ELIMINAR LA CATEGORIA: {{catedesc}} ?</h5>
                                                <h5>LA ACCION NO SE PODRA REVERTIR</h5>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary"
                                                    data-dismiss="modal">Cancelar</button>
                                                <button class="btn btn-danger eliminarCategoryBoton" value="{{catecve}}">ELIMINAR</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>



                        </td>
                    </tr>
                    {{else}}
                    <h4>NO SE ENCUENTRA NINGUNA CATEGORIA REGISTRADA</h4>
                    {{/each}}

                </tbody >

            </table>
        </div>
    </div>

</div>
<script src="/scripts/subcategorys.js" charset="utf-8"></script>
<script src="/scripts/functionsAdmin.js" charset="utf-8"></script>