<div class="row" id="allGroups">
    <div class="col-md-12 mx-auto">
        <div class="card text-center">
            {{> messages}}
            <div class="card-header">

                <div class="col-sm">
                    <a class="btn btn-primary float-left regresarTGroup" data-value={{courseID}} style="width: 5%;"><i class="fas fa-arrow-left" aria-hidden="true"></i></a>
                </div>

                <div class="col-sm">
                    <h3 class="col-sm">Integrantes</h3>
                </div>
                <div class="col-sm">
                    <h3 class="col-sm text-right">Periodo: {{period}}</h3>
                    <h3 class="col-sm text-right">Profesor: {{teacher}}</h3>
                </div>

            
            </div>
            <div class="card-body">
                <div class="row  justify-content-start">

                    <div class="col-sm">
                        Busqueda
                        <input type="text" style="width: 70%;" id="searchUser" >
                    </div>
                    <div class="col-md">
                        <button type='button' data-toggle='modal' data-target='#newGroup'
                            class="btn btn-success float-right" style="position: absolute; top: 20%; left: 70%">Nuevo Integrante</button>

                        <!-- cuadro del modal AGREGAR-->
                        <div class="modal fade" id="newGroup" tabindex="-1" role="dialog">
                            <div class="modal-dialog" role="document">
                                <form name="searchForm" id="searchForm">
                                    <div class="modal-content">
                                        <div class="modal-header d-block" style="background-color: #00447f; color: white">
                                            <h5 class="modal-title text-center">
                                                Nuevo Integrante
                                            </h5>
                                        </div>
                                        <div class="modal-body" style="text-align: start;">
                                            
                                            <button class="btn btn-primary searchUsers" for="inputName">Busqueda</button>
                                            <input type="text" style="width: 70%;" name="usercve" id="search"
                                                placeholder="# Asociado / Nombre">
                                            
                                            <div class="userInfo" id="userInfo">

                                            </div>

                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary"
                                                data-dismiss="modal">Cancelar</button>
                                            <button class="btn btn-primary nuevoIntegranteBoton" value="{{groid}}">Aceptar</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>





                    </div>

                </div>
            </div>
            <table class="table  table-striped  table-hover" id="tableGroups">
                <thead>
                    <tr>
                        <th style="width:10%; background-color: #5DACCD; color:#fff" scope="col">ID Asociado</th>
                        <th style="background-color: #5DACCD; color:#fff" scope="col">Nombre</th>
                        <th style="background-color: #5DACCD; color:#fff" scope="col">Status</th>
                        <th style="background-color: #5DACCD; color:#fff" scope="col">Ultima conexion</th>
                        <th style="background-color: #5DACCD; color:#fff" scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody id="allUsers">
                    {{#each list}}
                    <tr>
                        <th scope="row">{{usercve}}</th>
                        <td>{{fullname}}</td>
                        <td>{{status}}</td>
                        <td>{{timeago lastconec}}</td>
                        <td>
                            <button type="button" class="btn"
                                style="background-color:#1b9e1d;border: 0px !important;color:white;"
                                title="Detalles de usuario">
                                <i class="far fa-eye" aria-hidden="true"></i>
                            </button>
                            <button type="button" class="btn" data-toggle='modal' data-target='#Del{{id}}'
                                style="background-color: red;border: 0px !important;color:white;" title="Eliminar">
                                <i class="fas fa-trash-alt" aria-hidden="true"></i>
                            </button>

                            <!-- cuadro del modal ELIMINAR -->
                            <div class="modal fade" id="Del{{id}}" tabindex="-1" role="dialog">
                                <div class="modal-dialog" role="document">
                                    <form class="eliminar_integrante">
                                        <div class="modal-content">
                                            <div class="modal-header d-block" style="background-color: #00447f; color: white">
                                                <h5 class="modal-title text-center">
                                                    ELIMINAR DE LA LISTA
                                                </h5>
                                            </div>
                                            <div class="modal-body" style="text-align: start;">
                                                <h5>ESTA SEGURO QUE DESEA ELIMINAR EL USUARIO: {{fullname}} DE LA LISTA?</h5>
                                                
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary"
                                                    data-dismiss="modal">Cancelar</button>
                                                <button class="btn btn-danger eliminarListBoton" value="{{id}}" data-group="{{../groid}}">ELIMINAR</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>







                        </td>
                    </tr>
                    {{else}}
                    <h4>NO SE ENCUENTRA NINGUN USUARIO REGISTRADO EN ESTE GRUPO</h4>
                    {{/each}}

                </tbody>

            </table>
        </div>
    </div>

</div>
<script src="/scripts/subcategorys.js" charset="utf-8"></script>
<script src="/scripts/functionsTeacher.js" charset="utf-8"></script>